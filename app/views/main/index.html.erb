<!-- App Capsule -->
<div id="appCapsule">
	<% if level == 40 %>
	<%= render 'graph' %>
	<%= render 'vip' %>
	<%= render 'shortcut' %>
	<%= render 'shop' %>
	<% elsif level >= 30 %>
	<%= render 'graph' %>
	<%= render 'vip' %>
	<%= render 'shortcut' %>
 	<%= render 'shop' %>
	<% elsif level >= 20 %>
	<%= render 'shortcut' %>
	<%= render 'shop' %>
	<% else %>
	<%= render 'shop' %>
    <% end %>

</div>



