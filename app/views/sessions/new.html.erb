<% content_for :javascript_includes do %>
  <%= javascript_pack_tag 'session', 'data-turbolinks-track': 'reload' %>
<% end %>



<style> 
	.centered { 
	display : table;
	margin-left: auto;
	margin-right: auto; } 

	.login-form {
    display: flex;
    flex-direction: column;
	text-align: center;
	margin-left: auto;
	margin-right: auto;
	}
	.mb-5{
	margin-bottom: 5px !important;
	}
  .input {
  font-family: inherit;
  border-right:0px;
  border-top:0px;
  border-left:0px;
  border-bottom: 2px solid black ;
  outline: 0;
  color: $white;
  background: transparent;
  transition: border-color 0.2s;
	}
</style>


