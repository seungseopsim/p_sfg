<!-- App Capsule -->
<div id="appCapsule">
	<div class="section mt-1 mb-1">
		<div class="card">
			<div class="card-body">
				<div class="title">
				
					 <div class="card-title">현재 매출 (단위 만원)</div>
					 <div class="date"><%= DateTime.current.strftime("%m월%d일 %H:%M") %></div>
				</div>

				<ul class="listview image-listview">
					<% if @sfg.present? %>
					<li>
						<a class="item" onclick="opentab(event, 'SFG')" >
							<div class="in1">
								<div class="in1body">
									<div class="t">
										<div class="chip chip-warning">SFG</div>
									</div>
								</div>
							</div>
							<div class="in">
								<div class="in2body">
									<% if @sfg['total'].present? %>
									<div class="t"> <%= number_with_delimiter( ( @sfg['total'] * 0.0001).to_i, delimiter: ",") %></div>
									<% end %>
								</div>
							</div>
						</a>
					</li>
					<% end %>

					<% if @business.present? %>
					<% @business.each do|info| %>
						<li>
							<a class="item" onclick="opentab(event, '<%= info['s_nm_short'] %>')" >
								<div class="in1">
									<div class="in1body">
										<div class="t">
											<div class="chip chip-warning"><%= info['s_nm_short'] %></div>
										</div>
									</div>
								</div>
								<div class="in">
									<div class="in2body">
										<% if info['total'].present? %>
										<div class="t"><%= number_with_delimiter( (info['total'] * 0.0001).to_i, delimiter: ",") %></div>
										<% end %>
									</div>
								</div>
							</a>
						</li>
					<% end %>
					<% end %>										
				</ul>

			</div>
		</div>
	</div>

	<div class="section mt-1 mb-1">
		<div class="card">
			<div class="card-body">
