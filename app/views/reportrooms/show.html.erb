                <td class="align-middle text-center">
                    <%= key['sales'] %>
                </td>
                <td class="align-middle text-center">
                    <%= key['salesprevy'] %><br>
                    <% if key['salesrateprevy'].present? %>
                    <font <% if key['salesrateprevy'] >= 0.0 %> style="color:blue">
                        <% else %>
                        style="color:red">
                        <%end %>
                        <%= key['salesrateprevy'] %>
                    </font>
                    <% end %>
                </td>
                <td class="align-middle text-center">
                    <%= key['salesprevm'] %><br>
                    <% if key['salesrateprevm'].present? %>
                    <font <% if key['salesrateprevm'] >= 0.0 %> style="color:blue">
                        <% else %>
                        style="color:red">
                        <%end %>
                        <%= key['salesrateprevm'] %>
                    </font>
                    <% end %>
                </td>
                <td class="align-middle text-center">
                    <%= key['pltotal'] %><br>(
                    <% if key['prate'].present? %>
                    <font <% if key['prate'] >= 0.0 %> style="color:blue">
                        <% else %>
                        style="color:red">
                        <%end %>
                        <%= key['prate'] %>
                    </font>
                    <%end%> |
