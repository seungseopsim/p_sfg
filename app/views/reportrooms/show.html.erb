                    <font <% if key['lrate'] >= 0.0 %> style="color:blue">
                        <% else %>
                        style="color:red">
                        <%end %>
                        <%= key['lrate'] %>
                    </font>
                    <% end %>)
                </td>
            </tbody>
            <% end %>

            <% if @shopinfototal.present? %>
            <tbody>
                <td class="align-middle text-center">합계</td>
                <td class="align-middle text-center">
                    <%= @shopinfototal[:sales] %>
                </td>
                <td class="align-middle text-center">
                    <%= @shopinfototal[:salesprevy] %><br>
                    <% if @shopinfototal[:salesprevyavg].present? %>
                    <font <% if @shopinfototal[:salesprevyavg] >= 0.0 %> style="color:blue">
                        <% else %>
                        style="color:red">
                        <%end %>
                        <%= @shopinfototal[:salesprevyavg] %>
                    </font>
                    <% end %>
                </td>
                <td class="align-middle text-center">
                    <%= @shopinfototal[:salesprevm] %><br>
                    <% if @shopinfototal[:salesprevmavg].present? %>
                    <font <% if @shopinfototal[:salesprevmavg] >= 0.0 %> style="color:blue">
                        <% else %>
                        style="color:red">
                        <%end %>
                        <%= @shopinfototal[:salesprevmavg] %>
                    </font>
                    <% end %>
                </td>
                <td class="align-middle text-center">
                    <%= @shopinfototal[:plratetotal] %><br>(
                    <% if @shopinfototal[:prateavg].present? %>
                    <font <% if @shopinfototal[:prateavg] >= 0.0 %> style="color:blue">
                        <% else %>
                        style="color:red">
                        <% end %>
                        <%= @shopinfototal[:prateavg] %>
                    </font>
                    <% end %>|
                    <% if @shopinfototal[:lrateavg].present? %>
                    <font <% if @shopinfototal[:lrateavg] >= 0.0 %> style="color:blue">
                        <% else %>
                        style="color:red">
                        <%end %>
                        <%= @shopinfototal[:lrateavg] %>
                    </font>
                    <% end %>)
                </td>
            </tbody>
            <% end %>
        </table>

        <% end %>
    </div>

    <div>
        <% if @attachfiles.present? %>
        <ul class="list-group-item" style="height:100vh">
            <% @attachfiles.each do |key, value| %>
            <% if key == :image %>
            <% value.each_slice(3) do |temp| %>
            <% temp.each do |file| %>
            <li class="list-group-item listFile">
                <a href="<%=file.url %>" class="popimg" data-lightbox="data-set"><span class="fancy"><img src='<%=file.url %>'
                        style="width:120px;height:120px;border-radius:4px;"></span></a>
                <a href="<%=file.url %>" id="imgDown" download="<%=file.identifier %>"
                    class="btn btn--diagonal btn--orange">Download</a>
            </li>
            <% end %>
            <% end %>
            <% end %>
            <% if key == :video %>
            <li class="list-group-item listFile">
                <% value.each do |file| %>
                <a style="text-decoration:none;" download="<%=file.identifier %>" href="<%=file.url %>">
                    <i class="fas fa-video fa-5x"></i><%= file.identifier %>
                </a>
                <% end %>
            </li>
            <% end %>
            <% if key == :file %>
            <li class="list-group-item listFile">
                <% value.each do |file| %>
                <a style="text-decoration:none;" download="<%=file.identifier %>" href="<%=file.url %>">
                    <i class="fas fa-file fa-5x" ></i>
                </a>
				<br>
				 <span><%=file.identifier %></span>
                <% end %>
            </li>
            <% end %>
            <% end %>
        </ul>
        <% end %>
    </div>
    <% end %>
</div>
